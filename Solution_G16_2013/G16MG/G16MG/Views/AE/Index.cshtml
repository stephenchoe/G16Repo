@using PagedList;
@using PagedList.Mvc;
@model IPagedList<G16_2013.Models.MemberModel.AE>
@{
    ViewBag.Title = "AE管理首頁";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default ">
            <div class="panel-body">
                <div class="row">
                    @* 新增AE按鈕 *@
                    <div class="col-md-4">
                        <form role="form" action="/AE/Create">
                            <button type="submit" class="btn btn-primary ">
                                <span class="glyphicon glyphicon-plus-sign"></span>
                                新增AE
                            </button>
                        </form>
                    </div>

                    @* 條件搜尋 *@
                    @using (Html.BeginForm("Index", "AE", FormMethod.Post, new { @class = "form-horizontal", role = "search" }))
                    {
                        @Html.Action("GetAESearchInputModel", "AE", new { keyWord = ViewBag.KeyWord, searchWay = ViewBag.SearchWay })
                    }
                </div>
            </div>
        </div>


        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>#</th>
                    <th><a href='@Url.Action("Index", new { ViewBag.Page, ViewBag.SearchWay, ViewBag.KeyWord, ViewBag.SortBy })' class="text-primary">姓名 <span class="glyphicon glyphicon-sort"></span></a>@*@Html.ActionLink("姓名 ▼", "Index", new { sortBy = ViewBag.SortName, style = "color:#FF3300;font-size:20px;" }) *@</th>
                    <th>性別</th>
                    <th>手機</th>
                    <th>Email</th>
                    <th>合約狀態</th>
                    <th>現職公司</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null)
                {
                    <tr>
                        <td colspan="7">查無資料</td>
                    </tr>
                }
                else
                {
                    foreach (var ae in Model)
                    {
                        G16_2013.Models.MemberModel.Person person = ae.Person;

                    <tr>
                        <td></td>
                        <td>@Html.ActionLink(person.Name, "Detail", "AE", new { id = ae.AEId }, new { @class = "text-info" })</td>
                        <td>@Html.Action("DisplayGender", "Person", new { gender = person.Gender })</td>
                        <td>@person.ContactInfo.Phone</td>
                        <td>@person.ContactInfo.Email</td>
                        <td>
                            @Html.Action("DisplayAEStatus", "AE", new { isActive = ae.IsActive })
                        </td>
                        <td>
                            @Html.Action("DisplayAECurrentCompany", "AE", new { companyId = ae.CompanyId })
                        </td>
                    </tr>
                    }
                }


            </tbody>

        </table>



        @Html.PagedListPager(Model, Page => Url.Action("Index", new { Page, ViewBag.SearchWay, ViewBag.KeyWord, ViewBag.SortBy }),
        new PagedListRenderOptions
        {

            LinkToFirstPageFormat = "<< 第一頁",
            LinkToPreviousPageFormat = "< 上一頁",
            LinkToNextPageFormat = "下一頁 >",
            LinkToLastPageFormat = "最後一頁 >>",
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,

        })

        @section scripts{
            @if (TempData["message"] != null)
            {     
                @Html.Action("StatusAlert", "Base", new { status = TempData["message"] })     
            }
        }
    </div>
</div>
