@model G16_2013.Models.MemberModel.AECreateInputModel

@{
    ViewBag.Title = "新增AE";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><span class="glyphicon glyphicon-user"></span>新增AE</h2>



@using (Html.BeginForm("CreateAE", "AE", FormMethod.Post, new { @class = "form-horizontal" }))
{


    <div id="divPersonSelectCreate">
        @Html.EditorFor(m => m.PersonSelectCreateInput, "PersonSelectCreateInput")

    </div>

    <div id="divButton">
        <div class="form-group">
            @Html.LabelFor(m => m.BeginDate, new { @class = "col-md-1 control-label " })
            <div class="col-md-3">
                @Html.EditorFor(m => m.BeginDate, "DatePicker", new { @class = "form-control input-sm" })

            </div>

            @Html.LabelFor(m => m.EndDate, new { @class = "col-md-1 control-label " })

            <div class="col-md-3">

                @Html.EditorFor(m => m.EndDate, "DatePicker", new { @class = "form-control input-sm" })


            </div>

        </div>

        <br /><br />


        <div class="form-group">
            <div class="col-md-6 col-md-offset-1">
                <input type="button" class="btn btn-default" id="btncancel" value="取消" />
                <input type="submit" class="btn btn-primary" value="確認新增為AE" id="btncreateAE" />
            </div>
        </div>
    </div>


}

@section Scripts{
    <script>

        //註冊取消按鈕
        $("#btncancel").click(function (e) {
            e.preventDefault();
            var Url = window.location;
            window.location.assign(Url);
        })

        function ExistPerson() {
            $("#divButton").css("display", "none");
        }
        function NewPerson() {
            $("#divButton").css("display", "inline");
        }
        function PersonSelected() {
            $("#divButton").css("display", "inline");
        }
    </script>

}