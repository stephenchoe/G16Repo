        @if(Model.Status.Contains("成功"))
        {
            @:$("#dialog-message").html('<h1 class="text-success"><span class="glyphicon glyphicon-ok-sign"></span>@Model.Status</h1>');
        }
        else if (Model.Status.Contains("失敗"))
        {
            @:$("#dialog-message").html('<h1 class="text-primary"><span class="glyphicon glyphicon-remove-circle"></span>@Model.Status</h1>');
        }else{
            @:$("#dialog-message").html('<h1 class="text-info"><span class="glyphicon glyphicon-info-sign"></span> @Model.Status</h1>');
        }
        G16Alert($("#dialog-message"), "@Model.PositionId", 1500); //1500毫秒後自動消失  
        
    </script>

