@model DateTime?

@Html.TextBox("", ViewContext.ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control input-sm" })

@using (Html.BeginScriptContext())
{

    Html.AddScriptBlock(
        @<script type="text/javascript">
            $(function () {
                $('#@Html.IdForModel()').datepicker({
                    changeMonth: true,
                    changeYear: true,
                    dateFormat: 'yy/mm/dd'
                });
            });
        </script>
, true);
}